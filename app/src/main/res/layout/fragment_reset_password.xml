<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorPrimary"
        android:id="@+id/password_update"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_reset_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_update"
            android:hint="email"
            android:id="@+id/passwordResetText"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:text="CONFIRM"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/passwordUpdate"
        android:layout_below="@+id/password_reset_layout"/>


</RelativeLayout>